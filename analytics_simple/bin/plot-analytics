#!/bin/bash

# sanity check
if [ ! -f ${PSYNC_HOME}/bin/analytics-simple ]; then
    echo "analytics-simple is not built - check install"
    exit 1;
fi

# run the application, pipe to plotter
${PSYNC_HOME}/bin/analytics-simple | ${PSYNC_HOME}/examples/analytics_simple/feedgnuplot/bin/feedgnuplot --stream --domain --nodataid --lines --points --timefmt '%s' --set 'format x "%H:%M:%S"' --title "Host Analytics" --xlabel "timestamp (UTC sec)" --ylabel "percent" --legend 0 "CPU Load" --legend 1 "Network Rx" --legend 2 "Network Tx"
